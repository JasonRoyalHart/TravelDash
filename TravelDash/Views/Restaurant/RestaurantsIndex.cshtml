@model TravelDash.Models.RestaurantsViewModel
@{
    ViewBag.Title = "RestaurantIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


<h2>RestaurantIndex</h2>




    <fieldset>
        <legend>Travel Dash Hotel Search</legend>
        @using (Ajax.BeginForm("RestaurantSearch", "Restaurant", new AjaxOptions { UpdateTargetId = "divRestaurantSearchDetails" }))
        {
            <div id="divHotelSearchDetails"></div>
            <ol>
                <li>
                    @Html.Label("Find:")
                    @Html.TextBox("termsInput")
                </li>
            </ol>
            <button>Filter</button>
        }
    </fieldset>


@foreach (var item in Model.TempRestaurants)
{
    if (item.UserId == ViewBag.User)
    {
        var injection = "<tr><td><form> <input type=" + "'" + "radio" + "' " + "name=" + "'" + "select" + "' " + "value=" + "'" + "other" + "'" +
        "></form></td><td><img src=" + item.ImageUrl +
        "></td><td><img src=" + item.RatingUrl +
        "><td><b>" + item.Name +
        "</b></td><td>" + item.Phone +
        "</td><td>" + item.Category +
        "</td><td>" + item.Review +
        "</td><td><a href=" + item.Link +
        ">" + "More info" + "</a></td>" +
        "</tr>";
    }
}

